<h1>This is where the user will create their listing. Will be reqd to be logged in to be here </h1>

<% if @listing.errors.any? %>
  <div id="error_explanation">
    <h2>
      <%= pluralize(@listing.errors.count, "error") %>
      prohibited this listing from being saved:
    </h2>
 
    <ul>
    <% @listing.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
  <%end%> <!-- WHY 2 ENDS MAKE THIS WORK???? -->


<%= form_for(@listing) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :genre %>
    <%= f.text_field :genre %>

    <%= f.label :price %>
    <%= f.text_field :price %>

    <%= f.label :platform %>
    <%= f.text_field :platform %>

    <%= f.label :publisher %>
    <%= f.text_field :publisher %>


    <%= f.submit "List it!" %>
<%end%>